{
  "name": "@hollon-ai/server",
  "version": "0.1.0",
  "private": true,
  "description": "Hollon-AI Backend Server",
  "scripts": {
    "build": "nest build",
    "dev": "dotenv -e ../../.env.local -e ../../.env -- nest start --watch",
    "start": "dotenv -e ../../.env.local -e ../../.env -- nest start",
    "start:debug": "dotenv -e ../../.env.local -e ../../.env -- nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:integration": "dotenv -e ../../.env.test -- jest --config ./test/jest-integration.json",
    "test:integration:watch": "dotenv -e ../../.env.test -- jest --config ./test/jest-integration.json --watch",
    "test:integration:debug": "dotenv -e ../../.env.test -- jest --config ./test/jest-integration.json --runInBand --detectOpenHandles",
    "test:e2e": "dotenv -e ../../.env.test -- jest --config ./test/jest-e2e.json",
    "test:e2e:watch": "dotenv -e ../../.env.test -- jest --config ./test/jest-e2e.json --watch",
    "test:all": "npm run test && npm run test:integration",
    "clean": "rm -rf dist",
    "db:migrate": "dotenv -e ../../.env.local -e ../../.env -- ts-node --project ./tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d ./src/config/typeorm.config.ts",
    "db:migrate:generate": "dotenv -e ../../.env.local -e ../../.env -- ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -d ./src/config/typeorm.config.ts",
    "db:seed": "dotenv -e ../../.env.local -e ../../.env -- ts-node src/database/seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.15",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/platform-socket.io": "^10.0.0",
    "@nestjs/typeorm": "^10.0.2",
    "@nestjs/websockets": "^10.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^17.2.3",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "typeorm": "^0.3.20",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.15",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@types/pg": "^8.15.6",
    "@types/uuid": "^10.0.0",
    "dotenv-cli": "^11.0.0",
    "jest": "^29.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.spec.ts",
      "!**/*.e2e-spec.ts",
      "!**/*.integration-spec.ts",
      "!**/config/**",
      "!**/database/**",
      "!**/migrations/**",
      "!**/main.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
