{
  "name": "hollon-ai",
  "version": "0.1.0",
  "private": true,
  "description": "Recursive Multi-Agent System - AI agents collaborating like a startup organization",
  "keywords": [
    "ai",
    "multi-agent",
    "hollon",
    "autonomous"
  ],
  "license": "MIT",
  "packageManager": "pnpm@9.14.4",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "typecheck": "pnpm --filter @hollon-ai/server exec tsc --noEmit",
    "test": "turbo run test",
    "test:integration": "pnpm --filter @hollon-ai/server test:integration",
    "test:e2e": "turbo run test:e2e",
    "test:all": "pnpm test && pnpm test:integration",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:migrate": "pnpm --filter @hollon-ai/server db:migrate",
    "db:migrate:generate": "pnpm --filter @hollon-ai/server db:migrate:generate",
    "db:migrate:revert": "pnpm --filter @hollon-ai/server db:migrate:revert",
    "db:migrate:show": "pnpm --filter @hollon-ai/server db:migrate:show",
    "db:seed": "pnpm --filter @hollon-ai/server db:seed",
    "docker:up": "docker compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f docker/docker-compose.yml down",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
